<script>
    $(function () {
        // Inicializar el cuadro de texto del importe
        $("#importeTextBox").dxTextBox({
            onValueChanged: function (e) {
                // Cuando el valor del importe cambia, actualizar el filtro del dataSource del SelectBox
                var selectBox = $("#aprobadorSelectBox").dxSelectBox("instance");
                selectBox.getDataSource().filter(["MontoMaximo", ">=", e.value]);
                selectBox.getDataSource().load();
            }
        });

        // Inicializar el SelectBox del aprobador
        $("#aprobadorSelectBox").dxSelectBox({
            dataSource: new DevExpress.data.DataSource({
                store: new DevExpress.data.ODataStore({
                    url: "/Pagoes/AprobadorAreasLookup",
                    key: "IdAprobador"
                }),

                filter: ["MontoMaximo", ">=", $("#importeTextBox").dxTextBox("instance").option("value")],
                paginate: true,
                pageSize: 10
            }),
            valueExpr: "IdAprobador",
            displayExpr: "Nombre"
        });
    });

     
</script>

