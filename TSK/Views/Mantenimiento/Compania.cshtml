            <h2 class="page-title">
                Compa&ntilde;ía
            </h2>
        </div>
    </div>
}

@section PageActions{


}

@(Html.DevExtreme().DataGrid<SPP.Models.Entity.Compania>()
    .DataSource(ds => ds.Mvc()
        .Controller("Companias")
        .LoadAction("Get")
        .Key("IdCompania")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.IdCompania);

        columns.AddFor(m => m.NombreCompania);

        columns.AddFor(m => m.IdPais);
    })
)
